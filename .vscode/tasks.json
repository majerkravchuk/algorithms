{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Current Java File",
            "type": "shell",
            "command": "javac",
            "args": [
                "-g",
                "-cp",
                ".:./lib/algs4.jar",
                "-d",
                "./bin",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
